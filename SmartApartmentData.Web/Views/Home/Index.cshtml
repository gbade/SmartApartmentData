@model SmartApartmentData.Web.Models.PropertyViewModel

@{
    ViewData["Title"] = "Home Page";
}

<div>
    @using (Html.BeginForm("Index", "Home", FormMethod.Post))
    {
        <div class="form-row">
            <div class="form-group col-md-4">
                <label for="market">Market</label>
                @Html.TextBoxFor(
             model => model.Property.market, new
             {
                 @class = "form-control",
                 @placeholder = "Enter Market Name *",
                 @required = "required"
             })
            </div>
            <div class="form-group col-md-4">
                <label for="name">Name</label>
                @Html.TextBoxFor(
                    model => model.Property.name, new { @class = "form-control" })
            </div>
            <div class="form-group col-md-4">
                <label for="state">State</label>
                @Html.TextBoxFor(
                    model => model.Property.state, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-4">
                <label for="formerName">Former Name</label>
                @Html.TextBoxFor(
                    model => model.Property.formerName, new { @class = "form-control" })
            </div>
            <div class="form-group col-md-5">
                <label for="streetAddress">Street Address</label>
                @Html.TextBoxFor(
                    model => model.Property.streetAddress, new
                         {
                        @class = "form-control"
                         })
            </div>
            <div class="form-group col-md-3">
                <label for="city">City</label>
                @Html.TextBoxFor(
                    model => model.Property.city, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-4">
                <label for="longitude">Longitude</label>
                @Html.TextBoxFor(
                    model => model.Property.lng, new
                         {
                        @class = "form-control"
                         })
            </div>
            <div class="form-group col-md-4">
                <label for="latitude">Latitude</label>
                @Html.TextBoxFor(
                    model => model.Property.lat, new
                         {
                        @class = "form-control"
                         })
            </div>
            <div class="form-group col-md-4">
                <label for="mgmtid">Management Id</label>
                @Html.TextBoxFor(
                    model => model.Property.mgmtID, new
                         {
                        @class = "form-control"
                         })
            </div>
        </div>
        <button type="submit" class="btn btn-primary">Search</button>
    }
</div>

<p></p>

<div class="text-center">
    <div class="jumbotron jumbotron-fluid">
        <div class="container">
            <table class="table table-stripped" id="dataTable1">
                <thead>
                    @if (Model.Data != null && Model.Data.Count() > 0)
                    {
                        <tr>
                            <th scope="col">Name</th>
                            <th scope="col">Property ID</th>
                            <th scope="col">Former Name</th>
                            <th scope="col">Address</th>
                            <th scope="col">City</th>
                            <th scope="col">Market</th>
                            <th scope="col">State</th>
                            <th scope="col">Latitude</th>
                            <th scope="col">Longitude</th>
                            <th scope="col">Mgmt ID</th>
                        </tr>
                    }
                </thead>
                <tbody>
                    @if (Model.Data != null && Model.Data.Count() > 0)
                    {
                        @foreach (var data in Model.Data)
                        {
                            <tr>
                                <td>@data.Name</td>
                                <td>@data.PropertyID</td>
                                <td>@data.FormerName</td>
                                <td>@data.StreetAddress</td>
                                <td>@data.City</td>
                                <td>@data.Market</td>
                                <td>@data.State</td>
                                <td>@data.Latitude</td>
                                <td>@data.Longitude</td>
                                <td>@data.MgmtID</td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts{

    <script type="text/javascript">
        $(document).ready(function () {
            $('#dataTable1').DataTable();
        });</script>

}